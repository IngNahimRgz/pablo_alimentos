<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#d2413e3e"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/leche_y_derivados"
            android:id="@+id/imageView_grupo"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#051a9d"
                android:id="@+id/txtVw_nombre_grupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lacteos y derivados"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:textColor="#ffff"
                android:layout_marginLeft="10dp"
                android:text="producto 1"
                android:id="@+id/txtVw_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"/>
            <TextView
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/holo_blue_bright"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/txtVw_calorias_totales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 CAL"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>


